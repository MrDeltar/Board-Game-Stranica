@using Board_Game_Stranica.Models
@model Dogadaj

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <td>@Html.LabelFor(m => m.Naziv)</td>
            <td>
                @Html.TextBoxFor(m => m.Naziv)
                @Html.ValidationMessageFor(m => m.Naziv)
            </td>
        <tr>
        <tr>
            <td>@Html.LabelFor(m => m.Mjesto)</td>
            <td>
                @Html.TextBoxFor(m => m.Mjesto)
                @Html.ValidationMessageFor(m => m.Mjesto)
            </td>
        <tr>
        <tr>
            <td>@Html.LabelFor(m => m.DatumOdrzavanja)</td>
            <td>
                @Html.TextBoxFor(m => m.DatumOdrzavanja, "{0:yyyy-MM-dd}",
           new { type = "date"})
                @Html.ValidationMessageFor(m => m.DatumOdrzavanja)
            </td>
        <tr>
        <tr>
            <td>@Html.LabelFor(m => m.Organizator)</td>
            <td>
                @Html.TextBoxFor(m => m.Organizator)
                @Html.ValidationMessageFor(m => m.Organizator)
            </td>
        <tr>

    </table>
    <p>@Html.ValidationSummary("Prvo popraviti sljedeće:")</p>
    <p><input type="submit" value="Spremi" /></p>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


