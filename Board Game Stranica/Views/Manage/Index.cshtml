    <div class="row">
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Podaci</h4>
            <form class="needs-validation" novalidate="">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">Ime</label>
                        <input type="text" class="form-control" id="ime" placeholder="" value="" required="">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lastName">Prezime</label>
                        <input type="text" class="form-control" id="prezime" placeholder="" value="" required="">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email">@Model.RegViewMod.Email</label>
                    <input type="email" class="form-control" id="mail" placeholder="" required="">
                    <div class="invalid-feedback">
                        Email nije prepoznat
                    </div>
                </div>              
                    <dl class="col-md-6 mb-3">
                        <dd>
                            @if (Model.IndViewMod.HasPassword)
                            {
                                <div class="btn-group" role="group" aria-label="...">
                                    <button type="button" class="btn btn-default">@Html.ActionLink("Promijeni lozinku", "ChangePassword")</button>
                                </div>
                            }
                            else
                            {
                                <div class="btn-group" role="group" aria-label="...">
                                    <button type="button" class="btn btn-default">@Html.ActionLink("Napravi", "SetPassword")</button>
                                </div>
                            }
                            </dd>
                    </dl>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Promjena podataka</button>
            </form>
        </div>
    </div>
</div>
